---
import BaseLayout from '@/layouts/BaseLayout.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const team = await getCollection('team');
const sortedTeam = team.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { sections, company } = siteData;
---

<BaseLayout title="About Us">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-sage-50 to-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-semibold text-sage-900">
          {sections.about?.headline || "About Us"}
        </h1>
        <p class="mt-6 text-xl text-earth-600 leading-relaxed">
          {company.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-24 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        {sections.about?.image && (
          <div class="relative">
            <div class="aspect-[4/5] rounded-3xl overflow-hidden shadow-xl">
              <img 
                src={sections.about.image} 
                alt="Our story"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="absolute -bottom-6 -right-6 w-48 h-48 bg-sage-100 rounded-2xl -z-10"></div>
          </div>
        )}
        <div>
          <span class="text-sage-600 font-medium">Our Story</span>
          <h2 class="mt-2 font-display text-3xl sm:text-4xl font-semibold text-sage-900">
            A different approach to healthcare
          </h2>
          <div class="mt-6 prose prose-sage">
            <p class="text-lg text-earth-600 leading-relaxed">
              {sections.about?.content}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  {sections.about?.values && (
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline="Our Values" 
          description="The principles that guide everything we do"
        />
        
        <div class="mt-16 grid md:grid-cols-3 gap-8">
          {sections.about.values.map((value, index) => (
            <div class="bg-sage-50 rounded-2xl p-8">
              <div class="w-14 h-14 bg-sage-600 rounded-xl flex items-center justify-center mb-6">
                <span class="font-display text-2xl font-bold text-cream-100">
                  {String(index + 1).padStart(2, '0')}
                </span>
              </div>
              <h3 class="font-display text-xl font-semibold text-sage-900">
                {value.title}
              </h3>
              <p class="mt-3 text-earth-600 leading-relaxed">
                {value.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Team Section - Only show if team members exist -->
  {sortedTeam.length > 0 ? (
    <section id="team" class="py-24 bg-cream-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline={sections.team?.headline || "Meet Our Team"} 
          description={sections.team?.description}
        />
        
        <div class="mt-16 grid md:grid-cols-2 lg:grid-cols-3 gap-12">
          {sortedTeam.map(async (member) => {
            const { Content } = await member.render();
            return (
              <div class="bg-white rounded-2xl overflow-hidden shadow-sm">
                {member.data.image ? (
                  <div class="aspect-square overflow-hidden">
                    <img 
                      src={member.data.image} 
                      alt={member.data.name}
                      class="w-full h-full object-cover"
                    />
                  </div>
                ) : (
                  <div class="aspect-square overflow-hidden bg-gradient-to-br from-sage-100 to-sage-200 flex items-center justify-center">
                    <svg class="w-24 h-24 text-sage-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                )}
                <div class="p-6">
                  <h3 class="font-display text-xl font-semibold text-sage-900">
                    {member.data.name}
                  </h3>
                  <p class="mt-1 text-sage-600 font-medium">{member.data.role}</p>
                  <div class="mt-4 text-earth-600 text-sm leading-relaxed prose prose-sm">
                    <Content />
                  </div>
                  {member.data.email && (
                    <a 
                      href={`mailto:${member.data.email}`}
                      class="mt-4 inline-block text-sage-600 text-sm hover:text-sage-800 transition-colors"
                    >
                      {member.data.email}
                    </a>
                  )}
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  ) : null}

  <!-- CTA -->
  <section class="py-24 bg-sage-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-semibold text-cream-100">
        Ready to start your journey?
      </h2>
      <p class="mt-4 text-xl text-cream-300">
        We'd love to learn about your health goals.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="secondary" size="lg">
          Book a Consultation
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
