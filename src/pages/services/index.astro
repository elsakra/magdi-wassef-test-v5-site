---
import BaseLayout from '@/layouts/BaseLayout.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import Card from '@/components/Card.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { sections } = siteData;
---

<BaseLayout title="Services">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-sage-50 to-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-semibold text-sage-900">
          {sections.services?.headline || "Our Services"}
        </h1>
        {sections.services?.description && (
          <p class="mt-6 text-xl text-earth-600 leading-relaxed">
            {sections.services.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-24 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedServices.length > 0 ? (
        <div class="grid md:grid-cols-2 gap-8">
          {sortedServices.map((service) => (
            <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
              {service.data.image ? (
                <div class="aspect-[16/9] overflow-hidden">
                  <img 
                    src={service.data.image} 
                    alt={service.data.title}
                    class="w-full h-full object-cover"
                  />
                </div>
              ) : (
                <div class="aspect-[16/9] bg-gradient-to-br from-sage-100 to-sage-200 flex items-center justify-center">
                  <svg class="w-16 h-16 text-sage-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
              )}
              <div class="p-8">
                <h2 class="font-display text-2xl font-semibold text-sage-900">
                  {service.data.title}
                </h2>
                {service.data.shortDescription && (
                  <p class="mt-3 text-earth-600 leading-relaxed">
                    {service.data.shortDescription}
                  </p>
                )}
                
                {service.data.features && service.data.features.length > 0 && (
                  <ul class="mt-6 space-y-2">
                    {service.data.features.map((feature) => (
                      <li class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-sage-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-earth-600 text-sm">{feature}</span>
                      </li>
                    ))}
                  </ul>
                )}
                
                <div class="mt-6 flex items-center gap-4">
                  {service.data.duration && (
                    <span class="text-sm text-earth-500">
                      {service.data.duration}
                    </span>
                  )}
                  {service.data.price && (
                    <span class="text-lg font-semibold text-sage-700">
                      {service.data.price}
                    </span>
                  )}
                </div>
                
                <div class="mt-6">
                  <Button href="/contact" style="outline">
                    Learn More
                  </Button>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-xl text-earth-600">
            Service information coming soon. Please contact us for details.
          </p>
          <div class="mt-8">
            <Button href="/contact" style="primary">
              Contact Us
            </Button>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-sage-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-semibold text-cream-100">
        Not sure which service is right for you?
      </h2>
      <p class="mt-4 text-xl text-cream-300">
        Book a free discovery call and we'll help you find the best path forward.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="secondary" size="lg">
          Schedule a Call
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
