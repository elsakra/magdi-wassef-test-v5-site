---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';

const { sections, company } = siteData;
---

<BaseLayout title="Contact Us">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-sage-50 to-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-semibold text-sage-900">
          {sections.contact?.headline || "Get in Touch"}
        </h1>
        {sections.contact?.description && (
          <p class="mt-6 text-xl text-earth-600 leading-relaxed">
            {sections.contact.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-24 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div class="bg-white rounded-2xl p-8 lg:p-12 shadow-sm">
          <h2 class="font-display text-2xl font-semibold text-sage-900 mb-6">
            Send us a message
          </h2>
          
          <form class="space-y-6" action="#" method="POST">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-earth-700 mb-2">
                  First Name
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-cream-300 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-earth-700 mb-2">
                  Last Name
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-cream-300 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-earth-700 mb-2">
                Email Address
              </label>
              <input 
                type="email" 
                id="email" 
                name="email"
                required
                class="w-full px-4 py-3 rounded-xl border border-cream-300 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-earth-700 mb-2">
                Phone Number (optional)
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 rounded-xl border border-cream-300 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors"
              />
            </div>
            
            <div>
              <label for="interest" class="block text-sm font-medium text-earth-700 mb-2">
                What brings you here?
              </label>
              <select 
                id="interest" 
                name="interest"
                class="w-full px-4 py-3 rounded-xl border border-cream-300 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors bg-white"
              >
                <option value="">Select an option</option>
                <option value="general">General Inquiry</option>
                <option value="consultation">Book a Consultation</option>
                <option value="services">Learn About Services</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-earth-700 mb-2">
                Your Message
              </label>
              <textarea 
                id="message" 
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 rounded-xl border border-cream-300 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors resize-none"
                placeholder="Tell us about your health goals or questions..."
              ></textarea>
            </div>
            
            <Button style="primary" size="lg" class="w-full">
              Send Message
            </Button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="lg:pt-8">
          <h2 class="font-display text-2xl font-semibold text-sage-900 mb-8">
            Other ways to reach us
          </h2>
          
          <div class="space-y-8">
            {company.email && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-sage-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-sage-900">Email</h3>
                  <a href={`mailto:${company.email}`} class="text-earth-600 hover:text-sage-600 transition-colors">
                    {company.email}
                  </a>
                </div>
              </div>
            )}
            
            {company.phone && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-sage-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-sage-900">Phone</h3>
                  <a href={`tel:${company.phone}`} class="text-earth-600 hover:text-sage-600 transition-colors">
                    {company.phone}
                  </a>
                </div>
              </div>
            )}
            
            {company.hours && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-sage-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-sage-900">Hours</h3>
                  <div class="text-earth-600 text-sm space-y-1">
                    {company.hours.monday && <p>Monday: {company.hours.monday}</p>}
                    {company.hours.tuesday && <p>Tuesday: {company.hours.tuesday}</p>}
                    {company.hours.wednesday && <p>Wednesday: {company.hours.wednesday}</p>}
                    {company.hours.thursday && <p>Thursday: {company.hours.thursday}</p>}
                    {company.hours.friday && <p>Friday: {company.hours.friday}</p>}
                    {company.hours.saturday && <p>Saturday: {company.hours.saturday}</p>}
                    {company.hours.sunday && <p>Sunday: {company.hours.sunday}</p>}
                  </div>
                </div>
              </div>
            )}
          </div>
          
          <!-- Additional Info Box -->
          <div class="mt-12 bg-sage-50 rounded-2xl p-8">
            <h3 class="font-display text-xl font-semibold text-sage-900 mb-3">
              What to expect
            </h3>
            <p class="text-earth-600 leading-relaxed">
              Once you reach out, a member of our team will respond within 24-48 hours to schedule your discovery call. During this call, we'll learn about your health goals and discuss how we can help.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
